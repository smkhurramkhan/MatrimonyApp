<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="40dp"
    tools:context=".CreateActivityPart2">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topBarHome"
        android:background="#78E8F7"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mingle"
            android:textSize="25dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Next1CreateAcc54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#4BE0DF"
                android:text="Next"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/login"
                    android:id="@+id/profileImageUserCreateActivity"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Change Profile Photo"
                    android:id="@+id/textprofileImageUserCreateActivity"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/fullNameCreateAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/rounded_corner"
                    android:padding="10dp"
                    android:hint="Enter Your Full Name"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/occupationNameCreateAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_corner"
                    android:padding="10dp"
                    android:hint="Enter Your Profession"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/adressNameCreateAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:inputType="text"
                    android:background="@drawable/rounded_corner"
                    android:padding="10dp"
                    android:hint="Enter Your Adress"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Select Birth Date"
                    android:id="@+id/selectDateUserCreateActivity"
                    android:layout_gravity="center"
                    android:backgroundTint="#1B9C9B"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Birth Date : "
                        android:textSize="16dp"
                        android:id="@+id/displayBirthDate"
                        android:layout_marginStart="20dp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age : "
                        android:textSize="16dp"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/displayAge"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:textColor="@color/black"/>
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Select Your Gender"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/maleUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/buttonselector"
                        android:padding="5dp"
                        android:text="Male"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/femaleUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:backgroundTint="@color/buttonselector"
                        android:padding="5dp"
                        android:text="Female"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


            <EditText
                android:id="@+id/phoneNumCreateAcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:inputType="text"
                android:hint="Enter Your Number"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Is this Your First Marriage"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:visibility="visible"
                android:textColor="@color/black"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/switchActivity1"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/teal_700"
                android:layout_marginBottom="30dp"/>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>